<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDF2F6"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="240dp"
        android:layout_height="162dp"
        android:layout_marginTop="32dp"
        android:background="#023F51B5"
        android:text="Todo lo que tu mascota necesita"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#3F51B5"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLogotipo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="254dp"
        android:layout_height="65dp"
        android:layout_marginTop="28dp"
        android:text="¡Porque también son parte de la familia! "
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#3F51B5"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="#072196F3"
        android:text="Iniciar"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:strokeColor="#3F51B5"
        app:strokeWidth="2dp"
        tools:layout_editor_absoluteX="49dp" />

    <ImageView
        android:id="@+id/imgLogotipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/LogotipoPacho" />

</androidx.constraintlayout.widget.ConstraintLayout>